<%- include('./partials/head.ejs')%>

<%- include('./partials/header.ejs')%>
    <div class="flexCont">
    <%- include('./partials/aside.ejs')%>
    <main>
        <div class="wall">
            <h2 id="newPostBtn">Skriv nyt opl√¶g</h2>

            <div id="postForm" style="display:none" class="wall__createCont">
                <form class="createCont__form" method="POST">
                    <div class="form__inputCont">
                        <input autocomplete="off" placeholder="Titel *" type="text" id="title" name="title" required>

                        <textarea autocomplete="off" placeholder="Hej venner, *" id="form__body" name="body" required></textarea>
                    </div>
                    <button>Submit</button>
                </form>
            </div>

            <% if (blogs.length > 0) { %>
                <% blogs.forEach(blog => { %>
                    <div class="wall__post">
                        <h2 class="post__title"><%= blog.title %></h3>
                        <br>
                        <p class="post__snippet"><%= blog.body %></p>
                    </div>
                <% }) %>
            <% } else { %>
                <p>There are no blogs to display...</p>
            <% } %>
            
        </div>
    </main>
</div>
<%- include('./partials/footer.ejs')%>